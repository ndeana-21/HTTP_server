server {
	listen 8081;

	server_name www.localhost localhost;
	root www;

	index index.html;
	cgi .bla ubuntu_cgi_tester;

	location / {
		limit_except GET;
	}

	location /put_test {
		limit_except PUT;
		upload file_uploads;
	}

	location /post_body {
		limit_except POST;
		client_max_body_size 100;
	}

	location /directory {
		root www/;
		index youpi.bad_extension;
	}
}